              label
                b
                  | Username: 
              input(type="text" name="username").form-control
            div.p-2.m-2
              label
                b
                  | Password: 
              input(type="text" name="password").form-control
            div.p-2.m-2
              input(type="submit" value="Login")#login.btn-primary
            div.p-2.m-2
              input(type="submit" value="Create new user")#create.btn-secondary
        .col-sm
